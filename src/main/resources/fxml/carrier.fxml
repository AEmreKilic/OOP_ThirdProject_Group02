<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<BorderPane xmlns="http://javafx.com/javafx/22.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="edu.khas.cmpe343.group5.CarrierController">

    <!-- ÜST: GreenGrocer yeşil bar + kullanıcı adı + Logout -->
    <top>
        <HBox style="-fx-background-color: #2e7d32; -fx-padding: 10;" spacing="15">
            <children>
                <!-- Solda logo yazısı -->
                <Label text="GreenGrocer"
                       style="-fx-text-fill: white; -fx-font-size: 20; -fx-font-weight: bold;"/>

                <!-- Ortayı dolduran boşluk -->
                <Pane HBox.hgrow="ALWAYS"/>

                <!-- Kullanıcı adı -->
                <Label fx:id="usernameLabel"
                       text="carrier"
                       style="-fx-text-fill: white;"/>

                <!-- Logout butonu (beyaz) -->
                <Button text="Logout"
                        onAction="#handleLogout"
                        style="-fx-background-color: white; -fx-text-fill: #2e7d32; -fx-font-weight: bold;"/>
            </children>
        </HBox>
    </top>

    <!-- ORTA: 3 kolon (Available / Current / Completed) -->
    <center>
        <HBox spacing="15" style="-fx-padding: 15;">
            <children>

                <!-- SOLDAN 1. KOLON: Available Orders -->
                <VBox spacing="5" style="-fx-background-color: #f5f5f5; -fx-padding: 10; -fx-background-radius: 5;">
                    <children>
                        <Label text="Available Orders"
                               style="-fx-font-weight: bold; -fx-font-size: 14;"/>
                        <ListView fx:id="availableListView"
                                  prefWidth="300"
                                  prefHeight="400"/>
                    </children>
                </VBox>

                <!-- 2. KOLON: Current Orders -->
                <VBox spacing="5" style="-fx-background-color: #f5f5f5; -fx-padding: 10; -fx-background-radius: 5;">
                    <children>
                        <Label text="Current Orders"
                               style="-fx-font-weight: bold; -fx-font-size: 14;"/>
                        <ListView fx:id="currentListView"
                                  prefWidth="300"
                                  prefHeight="400"/>
                    </children>
                </VBox>

                <!-- 3. KOLON: Completed Orders -->
                <VBox spacing="5" style="-fx-background-color: #f5f5f5; -fx-padding: 10; -fx-background-radius: 5;">
                    <children>
                        <Label text="Completed Orders"
                               style="-fx-font-weight: bold; -fx-font-size: 14;"/>
                        <ListView fx:id="completedListView"
                                  prefWidth="300"
                                  prefHeight="400"/>
                    </children>
                </VBox>

            </children>
        </HBox>
    </center>

    <!-- ALT: Butonlar ortalanmış -->
    <bottom>
        <HBox alignment="CENTER" spacing="20" style="-fx-padding: 10;">
            <children>
                <Button text="Take Selected Order"
                        onAction="#handleTakeOrder"
                        style="-fx-background-color: #2e7d32; -fx-text-fill: white; -fx-font-weight: bold;"/>

                <Button text="Complete Selected Order"
                        onAction="#handleCompleteOrder"
                        style="-fx-background-color: #2e7d32; -fx-text-fill: white; -fx-font-weight: bold;"/>
            </children>
        </HBox>
    </bottom>

</BorderPane>
